
  <div class="container">
  <div class="col-md-6 pb-5" id="login">
    <h3 class="form-heading text-center">Mot de passe oubliÃ©?</h3>
      <div class="login-form">
        <div class="main-div">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), id: "Login", html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="input-group form-group"> 
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fe-icon-mail"></i></span>
            </div>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"inputEmail", placeholder:"email" %>
            </div>
          </div>

          <div class="actions mt-5">
            <%= f.submit "Envoyez moi les instructions pour modifier mon mot de passe", class: "btn btn-primary btn-block" %>
          </div>
            <% end %>
            <%= render "devise/shared/links" %>
        </div>
      </div>
  </div>
</div>

