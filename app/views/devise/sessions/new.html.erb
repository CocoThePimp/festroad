<div class="container">
    <div class="row">
    <div class="col-md-6 pb-5" id="login">
    <div class="wizard-body pt-2">

      <h3 class="form-heading text-center">Espace de connexion</h3>
        <div class="main-div">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), id: "Login") do |f| %>

          <div class="input-group form-group"> 
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fe-icon-mail"></i></span>
            </div>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"inputEmail", placeholder:"email" %>
            </div>
          </div>

          <div class="input-group form-group"> 
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fe-icon-lock"></i></span>
            </div>
            <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :se_souvenir_de_moi %>
            </div>
          <% end %>
    </div>
    
        <div class="wizard-footer text-right">
              <%= f.submit "Se connecter", class: "btn btn-primary" %>
        </div>
  <% end %>
<%= render "devise/shared/links" %>
</div>
</div>
</div>

