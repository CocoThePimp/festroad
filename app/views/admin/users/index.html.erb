<div class="page-container">
  <!-- Backoffice Fests-->
  <section class="container py-5 mb-4">
    <h1 class="h4 block-title text-center pt-3">Les utilisateurs de mon site FestRoad</h1>

            <div class="table-responsive">
              <table class= 'table table-striped'>
              <thead>
              <tr class= 'bg-gradient'>
                <th>#</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Administrateur</th>
                <th>Éditer</th>
                <th>Supprimer</th>
              </tr>
              </thead>
              <tbody>
              <% @users.each do |user|%>
              <tr>
                <td><%=user.id%></td>
                <td><%=user.first_name%></td>
                <td><%=user.last_name%></td>
                <td><%=user.email%></td>
                <td><%=user.is_admin%></td>
                <td><%=link_to 'Éditer', edit_admin_user_path(user.id) %></td>
                <td><%=link_to 'Supprimer', admin_user_path(user.id), method: :delete %></td>
              </tr>
                <% end %>
              </table>
        </div>
  </div>
  </div>
  </section>

          <!-- Total users-->
          <p class="container py-5 mb-4">
                  <strong>Nombre total d'utilisateurs: <%= @users.count %></strong>
          </p>