<div class="jumbotron">
  <div class="container">
    <div class="h1 text-uppercase">
      <span class="d-inline-block mr-2" data-parallax='{"y" : -20}'>M</span>
      <span class="d-inline-block mr-2" data-parallax='{"y" : 20}'>o</span>
      <span class="d-inline-block mr-2" data-parallax='{"y" : -20}'>n</span>
      <span> </span>
      <span class="d-inline-block mr-2" data-parallax='{"y" : 25}'>p</span>
      <span class="d-inline-block mr-2" data-parallax='{"y" : -25}'>r</span>
      <span class="d-inline-block mr-2" data-parallax='{"y" : 30}'>o</span>
      <span class="d-inline-block mr-2" data-parallax='{"y" : -30}'>f</span>
      <span class="d-inline-block mr-2" data-parallax='{"y" : 35}'>i</span>
      <span class="d-inline-block mr-2" data-parallax='{"y" : -35}'>l</span>
    </div>
  </div>
</div>
<div class="page-container">
  <div class="container mb-4">
    <div class="row">
      <!-- Account Sidebar-->
      <div class="col-lg-4 pb-5">
        <div class="author-card pb-3">
          <div class="author-card-cover"><%= image_tag "bracelet_festivals.jpg"%></div>
          <!-- Profile picture-->
          <div class="author-card-profile">
            <div class="author-card-avatar">
              <%if @user.avatar.attached?%>
              <%= image_tag @user.avatar.variant(resize: "100x100"), alt: 'avatar' %>
              <%else%>
              <i class="fas fa-user-circle fa-7x"></i>
              <%end%>
            </div>
            <!-- end-->
            <!-- end-->
            <div class="author-card-details">
              <h5 class="author-card-name text-lg"><%= @user.first_name%> <%= @user.last_name%></h5><span
                class="author-card-position">Depuis le <%= @user.created_at%></span>
            </div>
          </div>
        </div>
        <div class="wizard">
          <nav class="list-group list-group-flush">
            <%= link_to  edit_user_registration_path(current_user), class: 'list-group-item' do %>
            <i class="fas fa-user text-muted"></i>Param√®tres Profil
            <%end%>
            <div class="d-flex justify-content-between align-items-center">
            </div><%= link_to wish_lists_path, class: "list-group-item" do %>
            <i class="far fa-heart text-center"></i>
            Mes favoris
            <% end%>

          </nav>
        </div>
      </div>


      <!-- Profile Settings-->
      <div class="col-lg-8 pb-5" id="tab">
        <%= render 'users_info', user: @user %>
      </div>


    </div>
  </div>
</div>
</div>