<%= form_tag(festivals_path, method: :get ) do %>
  <div class= "row justify-content-center">
  <%= select_tag :music, options_for_select(@music.collect{ |u| [u.style, u.id] }), class: "form-control w-75", placeholder: " Genre de musique"  %>
  <%= hidden_field_tag :advanced, true %>
  <%= submit_tag 'Rechercher', class: "btn btn-primary"  do %>
      <i class="footer-icon fas fa-search"></i>
  <% end %>
  </div>
<%end%>