<%= form_tag(festivals_path, method: :get ) do %>
  <div class= "row justify-content-center">
  <%= select_tag :music, options_for_select(music.collect{ |u| [u.style, u.id] }), include_blank: "Type de musique" , class: "form-control form-date-2 mr-5" %>
  <%= select_tag :location, options_for_select(location.collect{ |u| [u.location, u.id] }.slice(0..-2)), include_blank:"Type de festival" , class: "form-control form-date mr-5" %>
  <%= date_field_tag :start_date, params[:start_date] ,class: "form-control form-date mr-5", value: Time.now.strftime('%Y-%m-%d') %>
  <%= date_field_tag :end_date,  params[:end_date], class: "form-control form-date mr-5" %>
  <%= hidden_field_tag :advanced, true %>
  <%= submit_tag 'Rechercher', class: "btn btn-primary"  do %>
      <i class="footer-icon fas fa-search"></i>
  <% end %>
  </div>
<%end%>