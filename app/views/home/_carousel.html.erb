 <section class="container pb-4" id="sectionhow">
    <h2 class="h3 block-title text-center pt-2"> Ca se passe prochainement </h2>
    <div class="owl-carousel" data-owl-carousel='{ "nav": false, "dots": true, "loop": true, "margin": 30, "autoplay": true, "autoplayTimeout": 4000, "responsive": {"0":{"items":1},"630":{"items":2},"991":{"items":3},"1200":{"items":3}} }'>

      <% @fest.each do |fest| %>
          <div class="card_index">
           <%if fest.festpic.attached?%>
              <%= image_tag fest.festpic, alt: 'festival picture' %>
            <%else%>
                <%= image_tag 'https://festivalhommesforts.ca/wp-content/uploads/2017/06/Festival_music_374x230.jpg' %>
            <%end%>
              <div class="card-body">
                <h4 class="card-title"><%= fest.title %></h4><br>
                <p><strong><%= fest.start_date.strftime("%d/%m/%Y") %> - <%= fest.end_date.strftime("%d/%m/%Y") %></strong></p>
                <p> Du côté de <%= fest.address%> </p>
                <%if fest.fest_locations != []%>
                  <p><i class="fas fa-map-marker-alt"></i><%= fest.fest_locations.each do |location| %><%= location.location_type.location%><%end%></p>
                <% end %>
                <%if fest.tags != [] %>
                  <%= fest.tags.each do |tag| %><a class="tag-link"><%= tag.music_type.style%> </a><%end%>
                <% end %>
              </div>
              <div class="card-footer text-muted text-sm">
                <span class="opacity-75"></span> <%= link_to 'Détails', festivals_path, class:"btn btn-style-4 btn-primary" %></div>
              </div>
        <% end %>
    </div>
</section>