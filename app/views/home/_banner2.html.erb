<div class= "banner-sektion banner-overlay ">
    <div class="container text-center">
        <div class="col-md-12">
            <div class="banner-heading "> 
            <h2 class="pt-md-5 pb-md-4 pt-3 pb-3 pt-md-0 pb-md-5">Trouve le festival qui te correspond le mieux </h2>

            <%= form_tag(festivals_path, method: :get ) do %>
                <div class= "row justify-content-center">
                <%= text_field_tag :title, params[:title], class: "form-control form-title", placeholder: "Nom d'un festival"  %>
                <a class= "btn btn-primary" id= "searchA"><i class="fas fa-plus"></i></a><br/>
                <a class= "btn btn-primary" id= "searchB"><i class="fas fa-minus"></i></a><br/>
                <%= button_tag 'Rechercher', class: "btn btn-primary"  do %>
                    <i class="fas fa-search"></i>
                <% end %>            
               
                </div>
                <div class= "row justify-content-center mt-3" id= "form">
                    <%= select_tag :music, options_for_select(@music.collect{ |u| [u.style, u.id] }), include_blank: "Type de musique" , class: "form-control form-date-2 mr-2" %>
                    <%= select_tag :location, options_for_select(@location.collect{ |u| [u.location, u.id] }.slice(0..-2)), include_blank:"Type de festival" , class: "form-control form-date-2 mr-2" %>
                    <%= date_field_tag :start_date, params[:start_date] ,class: "form-control form-date mr-2", value: Time.now.strftime('%Y-%m-%d') %>
                    <%= date_field_tag :end_date,  params[:end_date], class: "form-control form-date mr-2" %>
                   
                </div>
                
            <%end%><br/>
            <div>
        <%= link_to("#services", class: "scroll-to btn btn-style-4 btn-primary btn-lg mt-3") do %>
            <i class="fas fa-arrow-down"></i>
        <% end %>
      </div>
          </div>
          </div>
        </div>
    </div>
</div>


      